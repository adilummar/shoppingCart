<section>
    <div class="container ">
    <div class="row mt-4 ">
        <a href="/admin/add-products" class="btn btn-success ml-auto">add product</a>
    </div>
        <table class="table mt-4">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">name</th>
      <th scope="col">catogery</th>
      <th scope="col">discription</th>
      <th scope="col">image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.discription}}</td>
      <td><img src="/images/{{this._id}}.jpg" style="height:50px;width:50px"></td>
      <td> 
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you sure you want to delete {{this.name}} ?')">Delete</a>
        </td>
    </tr>
   {{/each}}
  </tbody>
</table>
    </div>
</section>