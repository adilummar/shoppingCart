<section>
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-6">
                <h2 class="text-center">Edit product</h2>
                <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
                
                    <label for="">Name</label>
                    <input type="text" name="name" class="form-control" value="{{product.name}}" >

                    <label for="">category</label>
                    <input type="text" name="category" class="form-control" value="{{product.category}}">

                    <label for="">price</label>
                    <input type="text" name="price" class="form-control" value="{{product.price}}">

                    <label for="">discription</label>
                    <input type="text" name="discription" class="form-control" value="{{product.discription}}">
                    
                    <label for="">image</label>
                    <img src="/images/{{product._id}}.jpg" alt="" style="width: 100px;height:auto" class="mt-3 mb-3" id="imgview">
                    <input type="file" name="Image" class="form-control" value="{{product.image}}"  onchange="viewImage(event)">

                    <button type="submit" class="btn btn-success mt-4">submit</button>
                    
                
                </form>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript">
function viewImage(event){
  if(event.target.files.length > 0){
    var src = URL.createObjectURL(event.target.files[0]);
    var preview = document.getElementById("imgview");
    preview.src = src;
  }
}
</script>